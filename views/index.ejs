<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
     <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <script type="text/javascript" src="/javascripts/script.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
  </head>
  <body>
  	<div class="container">
 
		<!-- Modal -->
		<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-header">
		    <h1 id="myModalLabel">
		    	Login
		    </h1>
		  </div>
		  <div class="modal-body">
		  	<div class="control-group">
			    <div class="controls">
			    	<input id="name" class="span4" type="text" placeHolder="Nom.." />
			    	<span class="label label-important hide">Required</span>
			    </div>
		   </div>
		  </div>
		  <div class="modal-footer">
		    <button id="check-name" class="btn btn-primary">	
		    	Connect !
		    </button>
		  </div>
		</div>
		


  		<div class="row">
  			<div class="hero-unit">
	    		<h1><%= title %></h1>
	    		<p>Welcome to <%= title %></p>
	    	</div>

	    	<div class="span12">
	    		<div class="row">
	    			<div class="span3" style="height:400px;border-right:1px solid gray; padding-right:5px;">
	    				<div class="page-header">
	    					<h3>Users :</h3>
	    				</div>
	    				<div class="users-list">
	    					<ul>

	    					</ul>
	    				</div>
	    			</div>
	    			<div class="span8">
	    				<div class="messages" style="height:400px;">
	    					<div class="page-header">
	    						<h3>Messages :</h3>
	    					</div>
	    					<div class='messages-list' style="overflow:scroll; height:300px;">

	    					</div>
	    				</div>

	    				<div class="span9">
	    					<div class="input-append">
							  <input type="text" class="span5 messageField" placeHolder="Write your message..." id="message-field" autofocus/>

							  <div class="btn-group">
							    <button href="#" class="btn btn-success" id="chat">Send</button>
							    
							  </div>
							</div>
	    					<div class="input-append">
	    						
	    					</div>
	    					<div class="btn-group">
	    						
	    					</div>
		    				
		    				<div class="row">
			    				<div class="error alert alert-error hide span7">
								  <button type="button" class="close" data-dismiss="alert">&times;</button>
								  <strong>Warning!</strong> You can't send an empty message...
								</div>
							</div>
			    		</div>
	    			</div>
	    		</div>
	    	</div>
    	</div>
    </div>
  </body>
</html>